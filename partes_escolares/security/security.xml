<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_instituto" model="ir.module.category">
        <field name="name">Gesti√≥n Escolar</field>
        <field name="description">Niveles de acceso para el sistema del instituto</field>
    </record>

    <record id="group_instituto_profesor" model="res.groups">
        <field name="name">Profesor</field>
        <field name="category_id" ref="module_category_instituto"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_instituto_admin" model="res.groups">
        <field name="name">Administrador</field>
        <field name="category_id" ref="module_category_instituto"/>
        <field name="implied_ids" eval="[(4, ref('group_instituto_profesor'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_instituto_directivo" model="res.groups">
        <field name="name">Directivo</field>
        <field name="category_id" ref="module_category_instituto"/>
        <field name="implied_ids" eval="[(4, ref('group_instituto_admin'))]"/>
    </record>

    <record id="rule_parte_profesor_propios" model="ir.rule">
        <field name="name">Profesores solo ven sus propios partes</field>
        <field name="model_id" ref="model_instituto_parte"/>
        <field name="groups" eval="[(4, ref('group_instituto_profesor'))]"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
    </record>

    <record id="rule_parte_admin_todos" model="ir.rule">
        <field name="name">Admins ven todos los partes</field>
        <field name="model_id" ref="model_instituto_parte"/>
        <field name="groups" eval="[(4, ref('group_instituto_admin'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
</odoo>