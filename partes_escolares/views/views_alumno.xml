<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_alumno_search" model="ir.ui.view">
        <field name="name">instituto.alumno.search</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Nombre del Alumno"/>
                <field name="matricula"/>
                
                <filter string="Alumnos con Grupo" name="con_grupo" domain="[('grupo_id', '!=', False)]"/>
                <filter string="Sin Matrícula" name="sin_matricula" domain="[('matricula', '=', False)]"/>
                
                <group expand="0" string="Agrupar por">
                    <filter string="Por Grupo" name="group_by_grupo" context="{'group_by': 'grupo_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_alumno_tree" model="ir.ui.view">
        <field name="name">instituto.alumno.tree</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="apellidos"/>
                <field name="grupo_id"/>
            </tree>
        </field>
    </record>

    <record id="view_alumno_graph" model="ir.ui.view">
        <field name="name">instituto.alumno.graph</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <graph string="Análisis de Alumnos" type="pie">
                <field name="grupo_id"/>
                <field name="alumno_count" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_alumno_pivot" model="ir.ui.view">
        <field name="name">instituto.alumno.pivot</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <pivot string="Análisis de Alumnos">
                <field name="grupo_id" type="row"/>
                <field name="alumno_count" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_alumno_kanban" model="ir.ui.view">
        <field name="name">instituto.alumno.kanban</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('instituto.alumno', 'image_128', record.id.raw_value)" alt="Alumno" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/> <field name="apellidos"/></strong>
                                <div>Grupo: <field name="grupo_id"/></div>
                                <div>Matrícula: <field name="matricula"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_alumno_form" model="ir.ui.view">
        <field name="name">instituto.alumno.form</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image_128" widget="image" class="oe_avatar"/>
                    <group>
                        <field name="name"/>
                        <field name="apellidos"/>
                        <field name="matricula"/>
                        <field name="grupo_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>