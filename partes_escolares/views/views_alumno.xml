<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_alumno_search" model="ir.ui.view">
        <field name="name">instituto.alumno.search</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Nombre del Alumno"/>
                <field name="nia"/>
                
                <filter string="Alumnos con Grupo" name="con_grupo" domain="[('grupo_id', '!=', False)]"/>
                <filter string="Sin NIA" name="sin_nia" domain="[('nia', '=', False)]"/>
                
                <group expand="0" string="Agrupar por">
                    <filter string="Por Grupo" name="group_by_grupo" context="{'group_by': 'grupo_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_alumno_tree" model="ir.ui.view">
        <field name="name">instituto.alumno.tree</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="apellidos"/>
                <field name="matricula"/>
                <field name="nia" widget="badge"/>
                <field name="grupo_id"/>
            </tree>
        </field>
    </record>

    <record id="view_alumno_form" model="ir.ui.view">
        <field name="name">instituto.alumno.form</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Nombre"/>
                            <field name="apellidos" string="Apellidos"/>
                        </group>
                        <group>
                            <field name="matricula" string="Matrícula"/>
                            <field name="nia" string="NIA"/>
                            <field name="partes_activas" widget="progressbar"/>
                        </group>
                         <group>
                            <field name="grupo_id" options="{'no_open': True, 'no_create': True}" string="Grupo Asignado"/>
                        </group>
                    </group>
                    
                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_alumno_kanban" model="ir.ui.view">
        <field name="name">instituto.alumno.kanban</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="apellidos"/>
                <field name="matricula"/>
                <field name="nia"/>
                <field name="grupo_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <h4><field name="name"/> <field name="apellidos"/></h4>
                                <p>Matrícula: <field name="matricula"/></p>
                                <p>NIA: <field name="nia"/></p>
                                <p>Grupo: <field name="grupo_id"/></p>
                                <div class="oe_kanban_bottom_right">
                                    <field name="parte_ids" widget="statinfo" string="Partes"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>