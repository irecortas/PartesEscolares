<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_alumno_tree" model="ir.ui.view">
        <field name="name">instituto.alumno.tree</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="apellidos"/>
                <field name="grupo_id"/>
            </tree>
        </field>
    </record>

    <record id="view_alumno_form" model="ir.ui.view">
        <field name="name">instituto.alumno.form</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Nombre"/>
                            <field name="apellidos" string="Apellidos"/>
                        </group>
                        <group>
                            <field name="matricula" string="MatrÃ­cula"/>
                        </group>
                         <group>
                            <field name="grupo_id" options="{'no_open': True, 'no_create': True}" string="Grupo Asignado"/>
                        </group>
                    </group>
                    
                    
                </sheet>
            </form>
        </field>
    </record>
</odoo>