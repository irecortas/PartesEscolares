<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_profesor_tree" model="ir.ui.view">
        <field name="name">instituto.profesor.tree</field>
        <field name="model">instituto.profesor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Nombre del Docente"/>
                <field name="cedula"/>
                <field name="email"/>
                <field name="grupo_ids" widget="many2many_tags" string="Grupos Asignados"/>
            </tree>
        </field>
    </record>

    <record id="view_profesor_kanban" model="ir.ui.view">
        <field name="name">instituto.profesor.kanban</field>
        <field name="model">instituto.profesor</field>
        <field name="arch" type="xml">
            <kanban quick_create="false">
                <field name="id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="cedula"/>
                                </div>
                                <div>
                                    <field name="email"/>
                                </div>
                                <div class="mt-2">
                                    <field name="grupo_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_profesor_form" model="ir.ui.view">
        <field name="name">instituto.profesor.form</field>
        <field name="model">instituto.profesor</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_print_profesor" type="object" string="Imprimir PDF" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Nombre del Docente"/>
                        <h1><field name="name" placeholder="Ej. Juan PÃ©rez"/></h1>
                    </div>

                    <group>
                        <field name="cedula"/>
                        <field name="email"/>
                        <field name="grupo_ids" widget="many2many_tags" string="Grupos que imparte"/>
                    </group>

                    
                </sheet>
            </form>
        </field>
    </record>
</odoo>