<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de árbol para Situacion -->
        <record id="view_situacion_tree" model="ir.ui.view">
            <field name="name">instituto.situacion.tree</field>
            <field name="model">instituto.situacion</field>
            <field name="arch" type="xml">
                <tree string="Situaciones">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Vista de formulario para Situacion -->
        <record id="view_situacion_form" model="ir.ui.view">
            <field name="name">instituto.situacion.form</field>
            <field name="model">instituto.situacion</field>
            <field name="arch" type="xml">
                <form string="Situación">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción de ventana para Situacion -->
        <record id="action_situacion" model="ir.actions.act_window">
            <field name="name">Situaciones</field>
            <field name="res_model">instituto.situacion</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú para Situacion -->
        <menuitem id="menu_situacion" name="Situaciones" parent="menu_gestion_cat" action="action_situacion"/>
    </data>
</odoo>