<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de árbol para Asignatura -->
        <record id="view_asignatura_tree" model="ir.ui.view">
            <field name="name">instituto.asignatura.tree</field>
            <field name="model">instituto.asignatura</field>
            <field name="arch" type="xml">
                <tree string="Asignaturas">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Vista de formulario para Asignatura -->
        <record id="view_asignatura_form" model="ir.ui.view">
            <field name="name">instituto.asignatura.form</field>
            <field name="model">instituto.asignatura</field>
            <field name="arch" type="xml">
                <form string="Asignatura">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="profesor_ids"/>
                            <field name="grupo_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción de ventana para Asignatura -->
        <record id="action_asignatura" model="ir.actions.act_window">
            <field name="name">Asignaturas</field>
            <field name="res_model">instituto.asignatura</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú para Asignatura -->
        <menuitem id="menu_asignatura" name="Asignaturas" parent="menu_gestion_cat" action="action_asignatura"/>
    </data>
</odoo>