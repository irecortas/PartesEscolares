<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_wizard_seleccionar_alumno_form" model="ir.ui.view">
        <field name="name">instituto.wizard.seleccionar.alumno.form</field>
        <field name="model">instituto.wizard.seleccionar.alumno</field>
        <field name="arch" type="xml">
            <form string="Buscar Alumno">
                <group>
                    <field name="alumno_id" options="{'no_create': True}" widget="many2one_list"/>
                </group>
                <footer>
                    <button name="action_confirmar" string="Seleccionar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_seleccionar_alumno" model="ir.actions.act_window">
        <field name="name">Buscar Alumno</field>
        <field name="res_model">instituto.wizard.seleccionar.alumno</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
