<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_motivo_tree" model="ir.ui.view">
        <field name="name">instituto.motivo.tree</field>
        <field name="model">instituto.motivo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="parte_ids" widget="many2many_tags" string="NÂº de Partes"/>
            </tree>
        </field>
    </record>

    <record id="view_motivo_kanban" model="ir.ui.view">
        <field name="name">instituto.motivo.kanban</field>
        <field name="model">instituto.motivo</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="mt-2">
                                    <field name="parte_ids" widget="many2many_tags" string="Incidencias"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_motivo_form" model="ir.ui.view">
        <field name="name">instituto.motivo.form</field>
        <field name="model">instituto.motivo</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_print_motivo" type="object" string="Imprimir PDF" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Nombre del Motivo"/>
                        <h1><field name="name" placeholder="Ej. Falta de respeto"/></h1>
                    </div>
                    <group>
                        <field name="parte_ids" widget="many2many_tags" string="Partes"/>
                    </group>
                    <notebook>
                        <page string="Partes Relacionados">
                            <field name="parte_ids">
                                <tree create="false">
                                    <field name="fecha"/>
                                    <field name="alumno_id"/>
                                    <field name="grupo_id"/>
                                    <field name="profesor_id"/>
                                    <field name="estado" widget="badge" decoration-info="estado == 'pendiente'" decoration-success="estado == 'cerrado'"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>