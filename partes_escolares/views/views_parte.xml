<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_parte_form" model="ir.ui.view">
        <field name="name">instituto.parte.form</field>
        <field name="model">instituto.parte</field>
        <field name="arch" type="xml">
            <form string="Parte de Disciplina">
                <header>
                    <button name="action_confirm" string="Confirmar" type="object" states="draft" class="btn-primary"/>
                    <button name="action_in_progress" string="En Progreso" type="object" states="open" class="btn-warning"/>
                    <button name="action_done" string="Cerrar" type="object" states="in_progress" class="btn-success"/>
                    <button name="action_reset" string="Reiniciar" type="object" states="open,in_progress,done" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Ej. Incidente de clase..."/></h1>
                    </div>
                    <group>
                        <group string="Alumno">
                            <field name="alumno_id" options="{'no_open': True, 'limit': 1}"/>
                            <field name="grupo_id" readonly="1"/>
                        </group>

                        <group string="Reporte">
                            <field name="profesor_ids_del_grupo" invisible="1"/>
                            <field name="profesor_id" 
                                options="{'no_open': True}" 
                                domain="[('id', 'in', profesor_ids_del_grupo)]"/>
                            <field name="fecha" />
                            <field name="hora" />
                            <field name="lugar_id"/>
                        </group>
                    </group>
                    
                    <group string="Información del Incidente" groups="partes_escolares.group_instituto_admin">
                        <field name="motivo_id" options="{'no_open': True}"/>
                    </group>

                    <notebook>
                        <page string="Detalles">
                            <field name="descripcion" placeholder="Explique qué sucedió..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_parte_tree" model="ir.ui.view">
        <field name="name">instituto.parte.tree</field>
        <field name="model">instituto.parte</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'draft'" decoration-warning="state == 'open'" decoration-danger="state == 'done'">
                <field name="name"/>
                <field name="alumno_id"/>
                <field name="fecha"/>
                <field name="hora"/>
                <field name="state"/>
                <field name="situacion_name" invisible="1"/>
                <field name="situacion_id" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_parte_calendar" model="ir.ui.view">
        <field name="name">instituto.parte.calendar</field>
        <field name="model">instituto.parte</field>
        <field name="arch" type="xml">
            <calendar string="Partes" date_start="fecha" color="state">
                <field name="alumno_id"/>
                <field name="name"/>
            </calendar>
        </field>
    </record>

    <record id="view_parte_graph" model="ir.ui.view">
        <field name="name">instituto.parte.graph</field>
        <field name="model">instituto.parte</field>
        <field name="arch" type="xml">
            <graph string="Gráfico de Incidencias" type="bar">
                <field name="alumno_id"/>
                <field name="incidencia_count" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_parte_graph_motivo" model="ir.ui.view">
        <field name="name">instituto.parte.graph.motivo</field>
        <field name="model">instituto.parte</field>
        <field name="arch" type="xml">
            <graph string="Incidencias por Motivo" type="pie">
                <field name="motivo_id"/>
                <field name="incidencia_count" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_parte_graph_situacion" model="ir.ui.view">
        <field name="name">instituto.parte.graph.situacion</field>
        <field name="model">instituto.parte</field>
        <field name="arch" type="xml">
            <graph string="Incidencias por Situación" type="line">
                <field name="situacion_id"/>
                <field name="fecha" interval="month"/>
                <field name="incidencia_count" type="measure"/>
            </graph>
        </field>
    </record>
    

    <record id="view_parte_pivot" model="ir.ui.view">
        <field name="name">instituto.parte.pivot</field>
        <field name="model">instituto.parte</field>
        <field name="arch" type="xml">
            <pivot string="Análisis Pivot">
                <field name="alumno_id" type="row"/>
                <field name="situacion_id" type="col"/>
                <field name="incidencia_count" type="measure"/>
            </pivot>
        </field>
    </record>
    

    <record id="view_parte_search" model="ir.ui.view">
        <field name="name">instituto.parte.search</field>
        <field name="model">instituto.parte</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Incidencia"/>
                <field name="alumno_id"/>
                
                <filter string="Pendientes" name="pend" domain="[('situacion_name','=','Pendiente de contactar')]"/>
                <filter string="Cerrados" name="cerrados" domain="[('situacion_name','=','Cerrado')]"/>
                
                <group expand="0" string="Agrupar por">
                    <filter string="Grupo del Alumno" name="grp" context="{'group_by':'grupo_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>