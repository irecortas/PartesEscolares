<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_parte_tree" model="ir.ui.view">
        <field name="name">instituto.parte.tree</field>
        <field name="model">instituto.parte</field>
        <field name="arch" type="xml">
            <tree decoration-info="estado == 'pendiente'" decoration-success="estado == 'cerrado'">
                <field name="name"/>
                <field name="alumno_id"/>
                <field name="fecha"/>
                <field name="estado" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_parte_calendar" model="ir.ui.view">
        <field name="name">instituto.parte.calendar</field>
        <field name="model">instituto.parte</field>
        <field name="arch" type="xml">
            <calendar string="Partes" date_start="fecha" color="estado">
                <field name="alumno_id"/>
                <field name="name"/>
            </calendar>
        </field>
    </record>

    <record id="view_parte_graph" model="ir.ui.view">
        <field name="name">instituto.parte.graph</field>
        <field name="model">instituto.parte</field>
        <field name="arch" type="xml">
            <graph string="GrÃ¡fico de Incidencias" type="bar">
                <field name="alumno_id"/>
                <field name="incidencia_count" type="measure"/>
            </graph>
        </field>
    </record>
    

    <record id="view_parte_pivot" model="ir.ui.view">
        <field name="name">instituto.parte.pivot</field>
        <field name="model">instituto.parte</field>
        <field name="arch" type="xml">
            <pivot string="AnÃ¡lisis Pivot">
                <field name="alumno_id" type="row"/>
                <field name="estado" type="col"/>
                <field name="incidencia_count" type="measure"/>
            </pivot>
        </field>
    </record>
    

    <record id="view_parte_search" model="ir.ui.view">
        <field name="name">instituto.parte.search</field>
        <field name="model">instituto.parte</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Incidencia"/>
                <field name="alumno_id"/>
                
                <filter string="Pendientes" name="pend" domain="[('estado','=','pendiente')]"/>
                <filter string="Cerrados" name="cerrados" domain="[('estado','=','cerrado')]"/>
                
                <group expand="0" string="Agrupar por">
                    <filter string="Grupo del Alumno" name="grp" context="{'group_by':'grupo_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_parte_form" model="ir.ui.view">
        <field name="name">instituto.parte.form</field>
        <field name="model">instituto.parte</field>
        <field name="arch" type="xml">
            <form string="Parte de Disciplina">
                <header>
                    <field name="estado" widget="statusbar" statusbar_visible="pendiente,contactado,cerrado"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Ej. Incidente de clase..."/></h1>
                    </div>
                    <group>
                        <group string="Alumno">
                            <field name="alumno_id" options="{'no_open': True}"/>
                            <field name="grupo_id" readonly="1"/>
                        </group>
                        <group string="Reporte">
                            <field name="fecha" />
                            <field name="profesor_id" options="{'no_open': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Detalles">
                            <field name="descripcion"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>