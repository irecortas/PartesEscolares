<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_grupo_tree" model="ir.ui.view">
        <field name="name">instituto.grupo.tree</field>
        <field name="model">instituto.grupo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="profesor_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_grupo_kanban" model="ir.ui.view">
        <field name="name">instituto.grupo.kanban</field>
        <field name="model">instituto.grupo</field>
        <field name="arch" type="xml">
            <kanban quick_create="false">
                <field name="id"/>
                        <button name="action_print_grupo" type="object" string="Imprimir PDF" class="btn-primary"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="mt-2">
                                    <field name="profesor_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_grupo_form" model="ir.ui.view">
        <field name="name">instituto.grupo.form</field>
        <field name="model">instituto.grupo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="id" invisible="1"/>
                    <group>
                        <field name="name" string="Nombre del Grupo"/>
                        
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>
</odoo>