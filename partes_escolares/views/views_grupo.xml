<?xml version="1.0" encoding="utf-8" ?>
<odoo>
<record id="view_grupo_form" model="ir.ui.view">
        <field name="name">grupo.form</field>
        <field name="model">instituto.grupo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="tutor_id"/>
                        </group>
                        <group>
                            <!-- Espacio para otros campos si se desea -->
                        </group>
                    </group>
                    <notebook>
                        <page string="Alumnos">
                            <field name="alumno_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="apellidos"/>
                                    <field name="nia"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Asignaturas">
                            <field name="asignatura_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>