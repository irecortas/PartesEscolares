<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_grupo_tree" model="ir.ui.view">
        <field name="name">instituto.grupo.tree</field>
        <field name="model">instituto.grupo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="grupo_count" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_grupo_kanban" model="ir.ui.view">
        <field name="name">instituto.grupo.kanban</field>
        <field name="model">instituto.grupo</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_grupo_graph" model="ir.ui.view">
        <field name="name">instituto.grupo.graph</field>
        <field name="model">instituto.grupo</field>
        <field name="arch" type="xml">
            <graph string="AnÃ¡lisis de Grupos" type="bar">
                <field name="name"/>
                <field name="grupo_count" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_grupo_search" model="ir.ui.view">
        <field name="name">instituto.grupo.search</field>
        <field name="model">instituto.grupo</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="view_grupo_form" model="ir.ui.view">
        <field name="name">grupo.form</field>
        <field name="model">instituto.grupo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>