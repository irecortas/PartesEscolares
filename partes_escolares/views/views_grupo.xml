<?xml version="1.0" encoding="utf-8" ?>
<odoo>
<record id="view_grupo_form" model="ir.ui.view">
        <field name="name">grupo.form</field>
        <field name="model">instituto.grupo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Lista de Alumnos">
                            <field name="alumno_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="matricula"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Profesores Asignados">
                            <field name="profesor_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>