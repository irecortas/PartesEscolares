<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">

    <!-- Motivos básicos -->
    <record id="motivo_falta_respeto" model="instituto.motivo">
      <field name="name">Falta de respeto</field>
    </record>
    <record id="motivo_retraso" model="instituto.motivo">
      <field name="name">Retraso</field>
    </record>
    <record id="motivo_dano_material" model="instituto.motivo">
      <field name="name">Daño de material</field>
    </record>

    <!-- Profesores de ejemplo -->
    <record id="profesor_ana" model="instituto.profesor">
      <field name="name">Ana López</field>
      <field name="especialidad">Matemáticas</field>
      <field name="cedula">12345678A</field>
      <field name="email">ana.lopez@example.com</field>
    </record>
    <record id="profesor_carlos" model="instituto.profesor">
      <field name="name">Carlos Ruiz</field>
      <field name="especialidad">Lengua</field>
      <field name="cedula">87654321B</field>
      <field name="email">carlos.ruiz@example.com</field>
    </record>

    <!-- Grupos -->
    <record id="grupo_1a" model="instituto.grupo">
      <field name="name">1º ESO A</field>
      <field name="profesor_ids" eval="[(4, ref('profesor_ana')), (4, ref('profesor_carlos'))]"/>
    </record>
    <record id="grupo_2b" model="instituto.grupo">
      <field name="name">2º ESO B</field>
      <field name="profesor_ids" eval="[(4, ref('profesor_carlos'))]"/>
    </record>

    <!-- Alumnos iniciales -->
    <record id="alumno_maria" model="instituto.alumno">
      <field name="name">María</field>
      <field name="apellidos">García</field>
      <field name="nia">A001</field>
      <field name="grupo_id" ref="grupo_1a"/>
    </record>
    <record id="alumno_juan" model="instituto.alumno">
      <field name="name">Juan</field>
      <field name="apellidos">Pérez</field>
      <field name="nia">A002</field>
      <field name="grupo_id" ref="grupo_1a"/>
    </record>
    <record id="alumno_lucia" model="instituto.alumno">
      <field name="name">Lucía</field>
      <field name="apellidos">Fernández</field>
      <field name="nia">B001</field>
      <field name="grupo_id" ref="grupo_2b"/>
    </record>
    <record id="alumno_pedro" model="instituto.alumno">
      <field name="name">Pedro</field>
      <field name="apellidos">López</field>
      <field name="nia">A003</field>
      <field name="grupo_id" ref="grupo_1a"/>
    </record>
    <record id="alumno_ana" model="instituto.alumno">
      <field name="name">Ana</field>
      <field name="apellidos">Martín</field>
      <field name="nia">B002</field>
      <field name="grupo_id" ref="grupo_2b"/>
    </record>
    <record id="alumno_carlos" model="instituto.alumno">
      <field name="name">Carlos</field>
      <field name="apellidos">Ruiz</field>
      <field name="nia">A004</field>
      <field name="grupo_id" ref="grupo_1a"/>
    </record>
    <record id="alumno_elena" model="instituto.alumno">
      <field name="name">Elena</field>
      <field name="apellidos">Sánchez</field>
      <field name="nia">B003</field>
      <field name="grupo_id" ref="grupo_2b"/>
    </record>
    <record id="alumno_david" model="instituto.alumno">
      <field name="name">David</field>
      <field name="apellidos">Gómez</field>
      <field name="nia">A005</field>
      <field name="grupo_id" ref="grupo_1a"/>
    </record>
    <record id="alumno_laura" model="instituto.alumno">
      <field name="name">Laura</field>
      <field name="apellidos">Díaz</field>
      <field name="nia">B004</field>
      <field name="grupo_id" ref="grupo_2b"/>
    </record>
    <record id="alumno_miguel" model="instituto.alumno">
      <field name="name">Miguel</field>
      <field name="apellidos">Hernández</field>
      <field name="nia">A006</field>
      <field name="grupo_id" ref="grupo_1a"/>
    </record>

    <!-- Situaciones -->
    <record id="situacion_pendiente" model="instituto.situacion">
      <field name="name">Pendiente de contactar</field>
    </record>
    <record id="situacion_contactado" model="instituto.situacion">
      <field name="name">Contactado</field>
    </record>
    <record id="situacion_cerrado" model="instituto.situacion">
      <field name="name">Cerrado</field>
    </record>

    <!-- Lugares -->
    <record id="lugar_aula" model="instituto.lugar">
      <field name="name">Aula</field>
    </record>
    <record id="lugar_pasillo" model="instituto.lugar">
      <field name="name">Pasillo</field>
    </record>
    <record id="lugar_gimnasio" model="instituto.lugar">
      <field name="name">Gimnasio</field>
    </record>

    <!-- Asignaturas -->
    <record id="asignatura_matematicas" model="instituto.asignatura">
      <field name="name">Matemáticas</field>
      <field name="profesor_ids" eval="[(4, ref('profesor_ana'))]"/>
      <field name="grupo_ids" eval="[(4, ref('grupo_1a'))]"/>
    </record>
    <record id="asignatura_lengua" model="instituto.asignatura">
      <field name="name">Lengua</field>
      <field name="profesor_ids" eval="[(4, ref('profesor_carlos'))]"/>
      <field name="grupo_ids" eval="[(4, ref('grupo_1a')), (4, ref('grupo_2b'))]"/>
    </record>

    <!-- Partes de ejemplo -->
    <record id="parte_1" model="instituto.parte">
      <field name="name">Incidente en clase</field>
      <field name="fecha">2023-09-01</field>
      <field name="motivo_id" ref="motivo_falta_respeto"/>
      <field name="alumno_id" ref="alumno_maria"/>
      <field name="profesor_id" ref="profesor_ana"/>
      <field name="situacion_id" ref="situacion_pendiente"/>
      <field name="lugar_id" ref="lugar_aula"/>
      <field name="prioridad">1</field>
      <field name="descripcion">Comportamiento disruptivo durante la clase.</field>
    </record>
    <record id="parte_2" model="instituto.parte">
      <field name="name">Retraso matutino</field>
      <field name="fecha">2023-09-02</field>
      <field name="motivo_id" ref="motivo_retraso"/>
      <field name="alumno_id" ref="alumno_juan"/>
      <field name="profesor_id" ref="profesor_carlos"/>
      <field name="situacion_id" ref="situacion_contactado"/>
      <field name="lugar_id" ref="lugar_pasillo"/>
      <field name="prioridad">0</field>
      <field name="descripcion">Llegada tarde a primera hora.</field>
    </record>
    <record id="parte_3" model="instituto.parte">
      <field name="name">Daño en material</field>
      <field name="fecha">2023-09-03</field>
      <field name="motivo_id" ref="motivo_dano_material"/>
      <field name="alumno_id" ref="alumno_lucia"/>
      <field name="profesor_id" ref="profesor_ana"/>
      <field name="situacion_id" ref="situacion_cerrado"/>
      <field name="lugar_id" ref="lugar_gimnasio"/>
      <field name="prioridad">2</field>
      <field name="descripcion">Rotura de balón durante educación física.</field>
    </record>

  </data>
</odoo>