<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_parte_incidencia" model="ir.actions.report">
        <field name="name">Imprimir Parte</field>
        <field name="model">instituto.parte</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">partes_escolares.report_parte_template</field>
        <field name="report_file">partes_escolares.report_parte_template</field>
        <field name="binding_model_id" ref="model_instituto_parte"/>
        <field name="binding_type">report</field>
    </record>
    
    <template id="report_parte_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center">
                            <h2>Parte de Incidencia Académica</h2>
                            <hr/>
                        </div>
                        
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Alumno:</strong> <span t-field="o.alumno_id.name"/> <span t-field="o.alumno_id.apellidos"/><br/>
                                <strong>Grupo:</strong> <span t-field="o.grupo_id.name"/><br/>
                            </div>
                            <div class="col-6 text-right">
                                <strong>Fecha:</strong> <span t-field="o.fecha"/><br/>
                                <strong>Profesor:</strong> <span t-field="o.profesor_id.name"/>
                            </div>
                        </div>

                        <div class="mt-4">
                            <h4>Motivo de la Incidencia</h4>
                            <p style="border: 1px solid #ccc; padding: 10px;">
                                <span t-field="o.motivo_id.name"/>
                            </p>
                        </div>

                        <div class="mt-4">
                            <h4>Descripción Detallada</h4>
                            <p t-field="o.descripcion"/>
                        </div>

                        <div class="mt-5">
                            <div class="row">
                                <div class="col-6 text-center">
                                    <p>__________________________</p>
                                    <p>Firma del Profesor</p>
                                </div>
                                <div class="col-6 text-center">
                                    <p>__________________________</p>
                                    <p>Sello del Centro</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>